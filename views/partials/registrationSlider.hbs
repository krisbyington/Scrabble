<div class="slider-container" id="registration-slider">
    <form method="POST" action="/users/register" enctype="application/x-www-form-urlencoded">
        <fieldset class="auth-container">
            <div class="input-field">
                <label class="input-name">Username</label>
                <input type="text" required name="username" class="form-input" id="username" required />
            </div>
            <div class="input-field">
                <label class="input-name">Password</label>
                <input type="password" required name="password" class="form-input" id="password" required />
            </div>
            <div class="input-field">
                <label class="input-name">Confirm Password</label>
                <input type="password" required name="confirm-password" class="form-input" id="confirmPassword"
                    required />
            </div>
            <br />
        </fieldset>
        <div class="button-container">
            <button type="submit" class="form-button">Register</button>
        </div>
    </form>
</div>