<div class="page-container">
    <div class="create-container">
        <form action="/game/create">
            <button type="submit" class="button">Create Lobby</button>
        </form>
        <form method="POST" action="/users/logout">
            <button class="button" type="submit">Log Out</button>
        </form>
    </div>
    <div class="lobby-search-header">
        <div class="id-section-title">Lobby ID</div>
        <div class="player-section">Players</div>
        <div class="button-section"></div>
    </div>
    <div class="lobby-search" id="lobby-search">
        {{#each lobbies}}
                <div class="lobby" id="lobby-{{id}}">
                    <div class="id-section">
                        {{id}}
                    </div>
                    <div class="player-section">
                    {{#each players}}
                        <p class="player">
                        {{this}}
                        </p>
                    {{/each}}
                    </div>
                    <div class="button-section">
                        <a href="lobby/{{id}}">
                            {{!-- can add an input="submit" to get rid of the a tag  --}}
                            <button class="join-button">Join</button>
                        </a>
                    </div>
                </div>
        {{/each}}
    </div>
</div>
